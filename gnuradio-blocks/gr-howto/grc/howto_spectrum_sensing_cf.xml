<?xml version="1.0"?>
<block>
  <name>SPECTRUM SENSING5</name>
  <key>howto_spectrum_sensing_cf</key>
  <category>HOWTO</category>
  <import>import howto</import>
  <make>howto.spectrum_sensing_cf($sample_rate,$ninput_samples,$samples_per_band,$pfd,$pfa,$tcme,$output_far,$debug_stats,$band_location,$useless_band,$debug_histogram,$nframes_to_check,$nframes_to_average,$downconverter)</make>
  <callback>set_sample_rate($sample_rate)</callback>
  <callback>set_ninput_samples($ninput_samples)</callback>
  <callback>set_samples_per_band($samples_per_band)</callback>
  <callback>set_pfd($pfd)</callback>
  <callback>set_pfa($pfa)</callback>
  <callback>set_tcme($tcme)</callback>
  <callback>set_band_location($band_location)</callback>
  <callback>set_useless_band($useless_band)</callback>
  <callback>set_history($history)</callback>
  <param>
    <name>Sample Rate</name>
    <key>sample_rate</key>
    <type>real</type>
  </param>
  <param>
    <name>FFT Size</name>
    <key>ninput_samples</key>
    <value>4096</value>
    <type>int</type>
  </param>
  <param>
    <name>Samples per subband</name>
    <key>samples_per_band</key>
    <value>16</value>
    <type>int</type>
  </param>
  <param>
    <name>False Discard Probability</name>
    <key>pfd</key>
    <value>0.001</value>
    <type>real</type>
  </param>
  <param>
    <name>False Alarm Probability</name>
    <key>pfa</key>
    <value>0.0001</value>
    <type>real</type>
  </param>
  <param>
    <name>Tcme</name>
    <key>tcme</key>
    <value>1.9528</value>
    <type>real</type>
  </param>
  <param>
    <name>Output False Alarm Rate</name>
    <key>output_far</key>
    <type>enum</type>
       <option>
           <name>Enable</name>
           <key>True</key>
       </option>
       <option>
           <name>Disable</name>
           <key>False</key>
       </option>
  </param>
  <param>
    <name>Band Location of the Primary User</name>
    <key>band_location</key>
    <value>0</value>
    <type>int</type>
  </param>
  <param>
    <name>Debug Statistics</name>
    <key>debug_stats</key>
    <type>enum</type>
       <option>
           <name>Disable</name>
           <key>False</key>
       </option>
       <option>
           <name>Enable</name>
           <key>True</key>
       </option>
  </param>
  <param>
    <name>Output False Alarm Histogram</name>
    <key>debug_histogram</key>
    <type>enum</type>
       <option>
           <name>Disable</name>
           <key>False</key>
       </option>
       <option>
           <name>Enable</name>
           <key>True</key>
       </option>
  </param>
  <param>
    <name>Useless Band in Hz</name>
    <key>useless_band</key>
    <value>200000.0</value>
    <type>real</type>
  </param>
  <param>
    <name>Number of consecutive frames to check</name>
    <key>nframes_to_check</key>
    <value>3</value>
    <type>int</type>
  </param>
  <param>
    <name>Number of frames to average</name>
    <key>nframes_to_average</key>
    <value>4</value>
    <type>int</type>
  </param>
  <param>
		<name>Downconverter</name>
		<key>downconverter</key>
		<value>1</value>
		<type>int</type>
		<option>
			<name>R820T</name>
			<key>1</key>
		</option>
		<option>
			<name>E4000</name>
			<key>2</key>
		</option>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$ninput_samples</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
